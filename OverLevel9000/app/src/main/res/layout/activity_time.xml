<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/container"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="uottawahack.overlevel9000.MainActivity">

<LinearLayout
    android:orientation="vertical"
    android:id="@+id/content"
    android:background="#595959"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="80dp"
        android:textColor="#ffffff"
        android:textSize="14pt"
        android:text="About" />

    <TextView
        android:id="@+id/timeLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:text="XX:XX"
        android:textSize="32pt"
        android:textColor="#000000"
        />

    <!--<View android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:background="@drawable/circle"/>-->

    <TextView
        android:id="@+id/txtRemaining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="50dp"
        android:textSize="14pt"
        android:textColor="#ffffff"
        android:text="remaining" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/bottom"
        android:background="#595959"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <TextView
            android:id="@+id/txtNumPatients"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:gravity="right"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="0dp"
            android:textSize="18pt"
            android:layout_weight="0.45"
            android:text="XX  " />

        <TextView
            android:id="@+id/txtPatientsBefore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0.55"
            android:text="patients before you"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>